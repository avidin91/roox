{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "paths": {
      "@entities/*": ["./src/entities/*"],
      "@features/*": ["./src/features/*"],
      "@pages/*": ["./src/pages/*"],
      "@shared/*": ["./src/shared/*"],
      "@widgets/*": ["./src/widgets/*"],
    }
  },
  "resolve": {
    "modules": ["node_modules", "src"]
  }
}
